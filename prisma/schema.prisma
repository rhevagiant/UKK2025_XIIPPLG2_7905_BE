datasource db {
  provider = "sqlite" 
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String    @unique
  name      String

  categories Category[]
  tasks      Task[]
}

model Category {
  id       Int    @id @default(autoincrement())
  category String
  userId   Int

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks Task[]
}

model Task {
  id         Int      @id @default(autoincrement())
  task       String
  previousStatus String?
  status     Status   @default(NOT_COMPLETE)
  userId     Int
  categoryId Int
  date DateTime

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}


enum Status {
  COMPLETE
  NOT_COMPLETE
}